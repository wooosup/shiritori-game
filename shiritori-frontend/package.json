{
  "name": "shiritori-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint .",
    "preview": "vite preview",
    "cap:sync": "npx cap sync",
    "cap:sync:android": "npx cap sync android",
    "android:native:build": "cd android && ./gradlew assembleDebug",
    "android:native:release": "cd android && ./gradlew bundleRelease",
    "android:version:bump": "node scripts/bump-android-version-code.mjs",
    "android:build": "npm run build && npm run cap:sync:android && npm run android:native:build",
    "android:release": "npm run mobile:check-env:strict && npm run android:version:bump && npm run build && npm run cap:sync:android && npm run android:native:release",
    "mobile:build": "npm run build && npm run cap:sync:android",
    "mobile:check-env": "node scripts/validate-mobile-env.mjs",
    "mobile:check-env:strict": "node scripts/validate-mobile-env.mjs",
    "mobile:bootstrap": "npm run build && npm run cap:sync:android && test -d android",
    "api:check:dev": "node scripts/check-render-api.mjs --env dev",
    "api:check:prod": "node scripts/check-render-api.mjs --env prod"
  },
  "dependencies": {
    "@capacitor/app": "^7.0.0",
    "@capacitor/browser": "^7.0.0",
    "@fontsource/zen-kaku-gothic-antique": "^5.2.8",
    "@heroicons/react": "^2.2.0",
    "@southdevs/capacitor-google-auth": "^7.0.0",
    "@supabase/supabase-js": "^2.93.3",
    "axios": "^1.13.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^3.2.4"
  }
}
